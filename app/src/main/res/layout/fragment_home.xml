<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@android:color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Imagen de bienvenida -->

            <!-- Texto de bienvenida con usuario -->

            <!-- Mensaje adicional -->

            <!-- Texto zonas de reciclaje en Arequipa resaltado -->

            <ImageView
                android:id="@+id/imgPinturaDescr"
                android:layout_width="83dp"
                android:layout_height="79dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_account_circle_24" />

            <TextView
                android:id="@+id/txtNamehome"
                android:layout_width="170dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:text="Bienvenido user\n a la app de"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="ZONAS DE RECICLAJE EN AREQUIPA"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMessagehome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Gracias por contribuir al cuidado del medio ambiente."
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- Bloque blanco con materiales reciclables -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:elevation="4dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Texto materiales reciclables -->
                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Materiales que puedes reciclar"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- Layout de materiales reciclables -->
                <GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:alignmentMode="alignMargins"
                    android:columnCount="3"
                    android:columnOrderPreserved="false"
                    android:gravity="center"
                    android:padding="8dp">

                    <!-- Imagenes de materiales reciclables -->
                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="9dp"
                        android:layout_height="68dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:src="@drawable/papel" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="5dp"
                        android:layout_height="63dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:src="@drawable/plastico" />

                    <ImageView
                        android:id="@+id/imgMasDestacados"
                        android:layout_width="3dp"
                        android:layout_height="55dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:src="@drawable/metal" />
                </GridLayout>
            </LinearLayout>

            <!-- InformaciÃ³n importante adicional -->
            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Recuerda separar tus residuos correctamente"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="italic"
                android:gravity="center" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
